<h2>Following Users</h2>
<% if @users.exists? %>
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size: "40x40" %></td>
          <td><%= user.name %></td>
          <td>フォロー数:<%= user.followers.count %></td>
          <td>フォロワー数:<%= user.followings.count %></td>
          <td><%= link_to 'Show', user, class: "user_#{user.id}" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>